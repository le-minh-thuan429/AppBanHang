<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:text="Xin chúc mừng"
        android:background="@drawable/bg_yellow_corner5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#0C0C0B"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:id="@+id/DanhMuc"
            android:text="Thông báo"/>
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/Red" />


    <TextView
        android:id="@+id/DuLieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Gửi yêu cầu đến cửa hàng"
        android:textColor="#FD0000"
        android:textSize="20dp"
        android:textStyle="normal" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Đơn đặt hàng của bạn sẽ được tiếp nhận thông tin "
        android:textColor="@color/black" />
    <TextView

        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Chúng tôi sẽ liên hệ để xác nhận trước khi  giao hàng"
        android:textColor="@color/black" />


    <TableRow
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:textAllCaps="false"
            android:text="Ok"
            android:textColor="@color/black"
            style="@style/Button5"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:id="@+id/Ok"/>

        <Button

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:textAllCaps="false"
            android:text="Trở lại"
            android:textColor="@color/black"
            android:elevation="10dp"
            style="@style/Button5"
            android:backgroundTint="@color/white"
            android:id="@+id/trolai"/>
    </TableRow>


</LinearLayout>