<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CaNhanFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_bia"
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:src="@drawable/anh6" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/anh1"
                        app:civ_border_width="2dp"
                        tools:ignore="MissingClass" />

                    <TextView
                        android:id="@+id/doianh"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Thay đổi ảnh"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:text="Giới thiệu về bạn"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_marginLeft="14dp"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"

                            android:orientation="vertical"
                            android:padding="10dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="5dp"
                            tools:ignore="RtlCompat">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:paddingLeft="20dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Usename"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold|normal" />

                                    <TextView
                                        android:id="@+id/Usename"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableRight="@drawable/lonhon"
                                        android:drawablePadding="10dp"
                                        android:gravity="right"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="1dp"
                                        android:paddingBottom="5dp"
                                        android:text="Thiết lập ngay"
                                        android:textColor="#0E0E0E"
                                        android:textSize="15dp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"

                            android:orientation="vertical"
                            android:padding="10dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="5dp"
                            tools:ignore="RtlCompat">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Họ tên"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold|normal" />

                                    <TextView
                                        android:id="@+id/hoTen"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableRight="@drawable/lonhon"
                                        android:drawablePadding="10dp"
                                        android:gravity="right"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="1dp"
                                        android:paddingBottom="5dp"
                                        android:text="Thiết lập ngay"
                                        android:textColor="#F44336"
                                        android:textSize="15dp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"

                            android:orientation="vertical"
                            android:padding="10dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="5dp"
                            tools:ignore="RtlCompat">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="110dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Số điện thoại"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold|normal" />

                                    <TextView
                                        android:id="@+id/Sodienthoai"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableRight="@drawable/lonhon"
                                        android:drawablePadding="10dp"
                                        android:gravity="right"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="1dp"
                                        android:paddingBottom="5dp"
                                        android:text="Thiết lập ngay"
                                        android:textColor="#F44336"
                                        android:textSize="15dp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"

                            android:orientation="vertical"
                            android:padding="10dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="5dp"
                            tools:ignore="RtlCompat">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Email"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold|normal" />

                                    <TextView
                                        android:id="@+id/email"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableRight="@drawable/lonhon"
                                        android:drawablePadding="10dp"
                                        android:gravity="right"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="1dp"
                                        android:paddingBottom="5dp"
                                        android:text="Thiết lập ngay"
                                        android:textColor="#F44336"
                                        android:textSize="15dp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical"
                            android:padding="10dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="5dp"
                            tools:ignore="RtlCompat">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="left"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Địa chỉ"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold|normal" />

                                    <TextView
                                        android:id="@+id/diachi"
                                        android:layout_width="0dp"
                                        android:layout_height="70dp"
                                        android:layout_weight="1"
                                        android:drawableRight="@drawable/lonhon"
                                        android:drawablePadding="10dp"
                                        android:gravity="right|center"
                                        android:padding="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="1dp"
                                        android:paddingBottom="5dp"
                                        android:text="Thiết lập ngay"
                                        android:textColor="#F44336"
                                        android:textSize="15dp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/Luu"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="15dp"
                        android:elevation="15dp"
                        android:text="Lưu"
                        app:shapeAppearanceOverlay="@style/Button5"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:background="@drawable/switch_trcks"
                        app:backgroundTint="#CC0909"
                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>





</FrameLayout>