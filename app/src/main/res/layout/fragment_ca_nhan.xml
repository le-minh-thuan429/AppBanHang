<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CaNhanFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:background="@drawable/bg_yellow_corner" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/anh1"
                        app:civ_border_width="2dp"
                        tools:ignore="MissingClass" />

                    <TextView
                        android:id="@+id/Usename"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Usename"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/SuaHS"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/vien"
                        android:padding="13dp"
                        android:text="Sửa hồ sơ"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/TTCN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:drawableLeft="@drawable/ttcanhan"
                            android:elevation="5dp"
                            android:padding="10dp"
                            android:hint="Thông tin cá nhân "
                            android:gravity="center|left"
                            android:textColorHint="@color/black"
                            android:drawablePadding="16dp"
                            android:textStyle="normal" />
                        <Button
                            android:id="@+id/TTDH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:drawableLeft="@drawable/ttdonhang"
                            android:elevation="5dp"
                            android:gravity="center|left"
                            android:padding="10dp"
                            android:hint="Trạng thái đơn hàng"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:drawablePadding="16dp"
                            android:textStyle="normal" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:drawableLeft="@drawable/gioithieu"
                            android:drawablePadding="16dp"
                            android:elevation="5dp"
                            android:gravity="center|left"
                            android:padding="10dp"
                            android:hint="Giới thiệu"
                            android:textColorHint="@color/black"

                            android:textStyle="normal" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:drawableLeft="@drawable/tttaikhoan"
                            android:elevation="5dp"
                            android:gravity="center|left"
                            android:drawablePadding="16dp"
                            android:padding="10dp"
                            android:hint="Thiết lập tài khoản"
                            android:textColorHint="@color/black"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/DangXuat"
                        android:layout_width="271dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/vien"
                        android:gravity="center"
                        android:padding="13dp"
                        android:layout_marginTop="15dp"
                        android:text="Đăng Xuất"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>