<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:text="Xin chúc mừng"
        android:background="@drawable/bg_yellow_corner5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#0C0C0B"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:id="@+id/DanhMuc"
            android:text="Thông báo"/>
    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/Red" />
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_TTDH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:text="Địa chỉ nhận hàng :"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <TextView
                    android:id="@+id/Diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:paddingBottom="5dp"
                    android:text="Quảng đường từ vị trí giao hàng của bạn với cơ sở Trà sữa BUBBLE khá xa (lớn hơn 50 Km). Vì thế chúng toi không thể giao hàng vì phải đảm bảo hương vị và độ tươi ngon của sản phẩm"
                    android:textColor="#0E0E0E"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:text="Vì thế mời bạn vui lòng chọn một vị trí gần hơn để giao hàng."
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:text="Xin chân thành cảm ơn"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Ok"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/vien"
        android:gravity="center"
        android:padding="13dp"
        android:text="Ok"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />
</LinearLayout>